{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
	"name": "@nmnm/sli",
	"version": "1.1.0",
	"exports": "./mod.ts",
	"tasks": {
		"prepare": "deno fmt && deno check && deno lint && deno test --no-check",
		"dev": "deno test --watch"
	},
	"license": "LGPL-2.1",
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.15"
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"newLineKind": "lf",
		"useBraces": "always",
		"semiColons": false,
		"trailingCommas": "onlyMultiLine",
		"spaceSurroundingProperties": false,
		"spaceAround": false
	}
}
